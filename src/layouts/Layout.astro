---
import Header from '../components/Header.astro'
import '@fontsource-variable/onest'

interface Props {
	description: string;
	title: string;
}

const { description,title } = Astro.props;
---

<!doctype html>

<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/finca.svg" />
		
		<title>{title}</title>
	</head>
	<body>
	<Header/>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		color-scheme: dark;
		
	}
	html {
		font-family: "onest variable", sans-serif;
		background: #ffffff;
	}
	
	p {
		color:rgba(0, 0, 0, 0.9);
		line-height: 1.1;
		margin-bottom: 1em;
		font-size: 0.9em;
		letter-spacing: 0.5px;
		font-weight: 50;
		
		
	}
	@keyframes brillo {
		0% {
			background-position: -200px;

		}
		100% {
			background-position: 10px;
		}
	}
	p  {
  color: #242424;
  
  font-weight: 800;
  background-image: linear-gradient(65deg, #000000, #ffffff, #000000);
  background-clip: text;
  line-height: 1.4;
}

  

a{
  text-decoration: none;
}
#header-dev{
	color: #000000;
	backdrop-filter: blur(5px);
}
#header-vip{
	background-color: rgb(0, 0, 109);
}
#header-nav {
	animation: blur linear both;
	animation-range: 0 500px;
	animation-timeline: scroll();
}

@keyframes blur {
	to {
		box-shadow: 
			0px 5px 50px -5px rgba(255, 255, 255, 0.1),
					
			0px 5px 50px 1px rgba(255, 255, 255, 0.3);
					
			background: rgba(255, 255, 255, 0.3);
					
			backdrop-filter: blur(20px);
	}
}

p strong{
	color: #000000;
	background-color: #000000;
}
#header-vue{
	color: #110074;
}
#logo-vue{
	width: 100px;
	filter: white;
}
#logo-vue:hover{
	filter: invert(100%);
	
	
}
</style>

